<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>edu.ufrj.renanbasilio.tempoclimanet.mvc.SearchController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ScrollController</servlet-name>
        <servlet-class>edu.ufrj.renanbasilio.tempoclimanet.mvc.ScrollController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PortalController</servlet-name>
        <servlet-class>edu.ufrj.renanbasilio.tempoclimanet.mvc.PortalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxController</servlet-name>
        <servlet-class>edu.ufrj.renanbasilio.tempoclimanet.mvc.AjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>edu.ufrj.renanbasilio.tempoclimanet.mvc.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/consulta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScrollController</servlet-name>
        <url-pattern>/scroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxController</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PortalController</servlet-name>
        <url-pattern>/portal</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>401</error-code>
        <location>/error401unauthorized.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>observadores</display-name>
        <web-resource-collection>
            <web-resource-name>PortalObservacao</web-resource-name>
            <description>Portal acessivel somente por observadores cadastrados.</description>
            <url-pattern>/portal</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>Somente usuarios com papel admin tem acesso a /portal</description>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>PortalObservador</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error401unauthorized.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <welcome-file-list>
        <welcome-file>consulta</welcome-file>
    </welcome-file-list>
</web-app>
